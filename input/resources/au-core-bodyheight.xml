  <abstract value="false" />
  <type value="Observation" />
  <baseDefinition value="http://hl7.org/fhir/StructureDefinition/bodyheight" />
  <derivation value="constraint" />
  <differential>
    <element id="Observation">
      <path value="Observation"/>
      <short value="Body height"/>
      <definition value="Measurement of a patient's height at a point in time."/>
      <comment value="Body height observation using a LOINC code, a SNOMED CT code and a metric UCUM unit of measure."/>
      <constraint>
        <key value="au-core-obs-02"/>
        <severity value="error"/>
        <human value="At least value or data absent reason shall be present"/>
        <expression value="dataAbsentReason.exists() or value.exists()"/>
        <xpath value="exists(f:*[starts-with(local-name(.), 'value')]) or exists(f:dataAbsentReason)"/>
        <source value="http://hl7.org.au/fhir/core/StructureDefinition/au-core-bodyheight"/>
      </constraint>
    </element>
    <element id="Observation.status">
