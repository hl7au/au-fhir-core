        <targetProfile value="http://hl7.org/fhir/StructureDefinition/RelatedPerson"/>
      </type>
      <mustSupport value="true"/>
    </element>
    <element id="Observation.value[x]:valueQuantity">
      <extension url="http://hl7.org/fhir/StructureDefinition/obligation">
