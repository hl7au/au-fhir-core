          <valueCanonical value="http://hl7.org.au/fhir/core/ActorDefinition/au-core-actor-client"/>
        </extension>
      </extension>
      <path value="Observation.code" />
    </element>
    <element id="Observation.code.coding">
      <path value="Observation.code.coding" />
      <min value="2" />
    </element>
    <element id="Observation.code.coding:snomedBodyHeightCode	">
      <path value="Observation.code.coding" />
      <sliceName value="snomedBodyHeightCode" />
      <short value="SNOMED CT Body Height"/>
      <min value="1" />
      <max value="1" />
    </element>
    <element id="Observation.code.coding:snomedBodyHeightCode.system">
      <path value="Observation.code.coding.system" />
      <min value="1" />
      <fixedUri value="http://snomed.info/sct" />
    </element>
    <element id="Observation.code.coding:snomedBodyHeightCode.code">
      <path value="Observation.code.coding.code" />
      <min value="1" />
      <fixedCode value="50373000" />
    </element>
